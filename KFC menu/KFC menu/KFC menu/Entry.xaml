<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KFC_menu.Entry"
              NavigationPage.HasNavigationBar="false"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Source="Logo.png" HorizontalOptions="Center" Margin="0, 85, 0, 0"></Image>
            <Label Text="WELCOME!" FontSize="30" TextColor="Black" HorizontalOptions="Center" FontAttributes="Bold" FontFamily="RobotoCondensed-Regular.ttf#RobotoCondensed-Regular"></Label>

            <Label Text="Lets get started!" Margin="0, 10, 0, 0" FontSize="22" TextTransform="Uppercase" FontAttributes="Bold" FontFamily="RobotoCondensed-Regular.ttf#RobotoCondensed-Regular" TextColor="Black" HorizontalOptions="Center"></Label>
            <Button HorizontalOptions="Center" FontSize="20" TextColor="White"  BackgroundColor="#ff3333" HeightRequest="60" WidthRequest="230" CornerRadius="50" Margin="0, 50, 0, 0" Text="OPEN MENU" Clicked="Button_Clicked"></Button>
            <Label Text="We Think You'll Love These" Margin="0, 70, 10, 0" HorizontalOptions="Center" TextColor="Black" FontSize="20"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>