<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KFC_menu.Drinks2"
             Title="KFC Fanta">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

            <Image Source="fanta.jpg" Margin="0, 20, 0, 0" HeightRequest="300" HorizontalOptions="Center"></Image>
            <Label Text="Fanta" FontSize="24" HorizontalOptions="Center" Margin="0, 20, 0, 0" TextColor="#FF6666"></Label>
            <Label Text="Price: 3.44$" FontSize="20" HorizontalOptions="Center" Margin="0, 0, 0, 0" TextColor="#FF6666"></Label>
            <Label Text="Try our KFC Fanta a refreshing soft drink which comes in larger varaities, guaranteed to cool on these hot days!" FontSize="18" TextColor="Black"  HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" Margin="10, 20, 10, 10"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>