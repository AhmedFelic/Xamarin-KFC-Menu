<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KFC_menu.Food1"
             Title="KFC Chicken Menu">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

        <Image Source="chickenMeni.jpg" HeightRequest="200" Margin="0, 50, 0, 0" VerticalOptions="Center" HorizontalOptions="Center"></Image>
        <Label Text="KFC Chicken Menu" FontSize="24" HorizontalOptions="Center" Margin="0, 20, 0, 0" TextColor="#FF6666"></Label>
        <Label Text="Price: 14.99$" FontSize="20" HorizontalOptions="Center" Margin="0, 0, 0, 0" TextColor="#FF6666"></Label>
        <Label Text="Try our popular KFC Chicken, now with more food for your money, large cola, ketchup and fries!" FontSize="18" TextColor="Black"  HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" Margin="10, 20, 10, 10"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>